@model IEnumerable<VFoods.tbl_Purchases>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
   
    <a href="@Url.Action("Create", "Purchases")" class="btn btn-primary">
        <span>
            <i class="fas fa-plus-circle"></i>

        </span>
        <span>
            <strong>Add New Purchase </strong>
        </span>
        </a>
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tbl_vendor.VendorName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tbl_vendor.VendorName)
        </td>
        <td>
     

            <a href="@Url.Action("Edit", "Purchases", new { id = item.id })" class="btn btn-primary">
                <span>
                    <i class="fas fa-edit"></i>
                </span>
            </a> |
            <a href="@Url.Action("Details", "Purchases", new { id = item.id })" class="btn btn btn-success">
                <span>
                    <i class="fas fa-list"></i>
                </span>
            </a> |
            <a href="@Url.Action("Delete", "Purchases", new { id = item.id })" class="btn btn-danger">
                <span>
                    <i class="fas fa-trash-alt"></i>
                </span>
            </a>
        </td>
    </tr>
}

</table>
