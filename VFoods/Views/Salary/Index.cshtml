@model IEnumerable<VFoods.tbl_salary>

@{
    ViewBag.Title = "Index";
}

<h2>Salary Page</h2>
<form asp-action="Index" method="get">

    <p>
        <input type="search" placeholder="Enter employee name " value="@ViewData["GetSalaryDetails"]" name="searching" style="width:500px" />>
        <input type="submit" value="search" class="btn btn-primary">
       
    </p>

</form>

<a href="@Url.Action("Create", "Salary")" class="btn btn-primary">
    
    <span>
        <i class="fas fa-plus-circle"></i>
        
    </span>
    <span>
        <strong>Add salary </strong>
    </span>
</a>
</br> &nbsp;   



<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tbl_Employee.Emp_Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tbl_Employee.Emp_Name)
        </td>
        <td>
            <a href="@Url.Action("Edit", "Salary", new { id = item.id })" class="btn btn-primary">
                <span>
                    <i class="fas fa-edit"></i>
                </span>
            </a> |
            <a href="@Url.Action("Details", "Salary", new { id = item.id })" class="btn btn-success">
                <span>
                    <i class="fas fa-list"></i>
                </span>
            </a> |
            <a href="@Url.Action("Delete", "Salary", new { id = item.id })" class="btn btn-danger">
                <span>
                    <i class="far fa-trash-alt"></i>
                </span>
            </a> |


        </td>
    </tr>
}

</table>
