@model IEnumerable<VFoods.tbl_vendor>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
   
    <a href="@Url.Action("Create", "Vendor")" class="btn btn-primary">
        <span>
            <i class="fas fa-plus-circle"></i>

        </span>
        <span>
            <strong>Add New Vendor </strong>
        </span>
    </a>
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.VendorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VendorNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VendorAddress)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.VendorName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VendorNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VendorAddress)
        </td>
        <td>
            

            <a href="@Url.Action("Edit", "Vendor", new { id = item.id })" class="btn btn-primary">
                <span>
                    <i class="fas fa-edit"></i>
                </span>
            </a> |
            <a href="@Url.Action("Details", "Vendor", new { id = item.id })" class="btn btn btn-success">
                <span>
                    <i class="fas fa-list"></i>
                </span>
            </a> |
            <a href="@Url.Action("Delete", "Vendor", new { id = item.id })" class="btn btn-danger">
                <span>
                    <i class="fas fa-trash-alt"></i>
                </span>
            </a>
        </td>
    </tr>
}

</table>
